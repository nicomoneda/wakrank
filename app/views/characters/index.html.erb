<h1 class="display-5 text-center fw-bold text-body-emphasis">Coucou, bienvenue dans l'index des persos</h1>

<div class="container">
  <table class="table text-center">
      <tr>
        <th scope="col">Nom du perso</th>
        <th scope="col">Niveau</th>
        <th scope="col">Total coffres</th>
      </tr>
      <% @characters.each_with_index do |character, index| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.level %></td>
        <td><%= @recompenses[index] %></td>
        <td><%= link_to "Editer", edit_character_path(character), data: { turbo_frame: 'modal' } %></td>
        <td><%= link_to "Supprimer", character_path(character), data: { turbo_method: :delete, turbo_confirm: "Es-tu sÃ»r de vouloir supprimer #{ character.name } ?" } %></td>
      </tr>
      <% end %>
  </table>
</div>
<div class="text-center fw-bold text-body-emphasis">
  <%= link_to "Nouveau personnage", new_character_path, data: { turbo_frame: 'modal' } %>
</div>